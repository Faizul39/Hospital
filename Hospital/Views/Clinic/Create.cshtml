@model Hospital.Models.Clinic

@{
    ViewData["Title"] = "Create";
}

<link href="~/css/clinic.css" rel="stylesheet" />

<body2>
    <div class="container">
        <header>Clinic Summary  Details</header>
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div class="form first">
                <div class="details Protein">
                    <div class="fields">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="input-field">
                            <label asp-for="Name">Name</label>
                            <input asp-for="Name" type="text" placeholder="Enter Name" />
                        </div>
                        <span asp-validation-for="Name" class="text-danger"></span>
                        <div class="input-field">
                            <label asp-for="Address">Address</label>
                            <input asp-for="Address" type="text" placeholder="Enter Address" />
                        </div>
                        <span asp-validation-for="Address" class="text-danger"></span>
                        <div class="input-field">
                            <label asp-for="Created_Date">Created Date</label>
                            <input asp-for="Created_Date" type="date" placeholder="Enter Created Date" />
                        </div>
                        <span asp-validation-for="Created_Date" class="text-danger"></span>
                    </div>
                </div>
                <div class="button">
                    <input type="submit" value="Save" class="btn btn-primary" /> |
                    <a asp-action="Index" class="btn btn-success">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</body2>

