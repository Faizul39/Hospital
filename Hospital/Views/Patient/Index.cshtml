@model IEnumerable<Hospital.Models.Patients>

@{
    ViewData["Title"] = "Index";
}

<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" rel="stylesheet" />

<h3 class="text-center"><i class="fas fa-comment-doller text-success"></i> Patient Information </h3>
@* <h1>Index</h1> *@

@* <p>
    <a asp-action="Create">Create New</a>
</p> *@
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PatientId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ClinicId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Created_Date)
            </th>
            <th>
                Status
            </th>
            <th>
                Operations
            </th>
            <th>
                <a asp-action="Create" class="btn btn-success text-white"><i class="fas fa-random"></i> Patient Form </a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PatientId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ClinicId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Created_Date)
            </td>
            <td>
                <select name="Status" id="Status-dropdown">
                    <option value="0">--</option>
                    <option value="1">Active</option>
                    <option value="2">In-Active</option>
                </select>
            </td>
            <td class="button">
                 <a asp-action="Edit" asp-route-id="@item.PatientId"><i class="fas fa-user-edit fa-2x"></i></a>
                 <a asp-action="Delete" asp-route-id="@item.PatientId"><i class="fas fa-trash fa-2x"></i></a>
                @*  @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) | *@
                @*  @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) | *@ 
                @*  @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })  *@
            </td>
        </tr>
}
    </tbody>
</table>
